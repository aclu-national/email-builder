{% include "partials/preheader.njk" %}
{%- if topper -%}
	{%- include "components/topper.njk" -%}
{%- endif -%}
<table role="presentation" align="center" border="0" cellpadding="0" cellspacing="0" class="email-wrapper" width="{{theme.sizing.wrapper}}">
	<tbody>
		{%- include "partials/logo.njk" -%}
		<tr>
			<td class="email-content" style="color: {{theme.colors.default.black}};font-family: {{theme.typography.sans}};font-size: {{theme.typography.body}};line-height: {{theme.typography.lineHeight}};padding: {{theme.sizing.contentPadding}};border-bottom: 1px solid {{theme.colors.default.mbGrey}};" valign="top">
				<!-- BODY CONTENT -->
				{{ content | safe }}

				{%- if test == true -%}
					<p><strong>ACLU</strong></p>
				{%- else -%}
					{%- include "components/signature.njk" -%}
				{%- endif -%}
			</td>
		</tr>
	</tbody>
</table>
