<div align="center">
	<table role="presentation" width="90%" cellpadding="0" cellspacing="0" border="0">
		<tbody>
			<tr>
				<td class="dm-box" style="color:#3c3532;font-family: Arial,'Helvetica Neue',sans-serif;font-size:16px;line-height:20px;padding:25px 25px 0px 25px;background-color:#f2f2f2;text-align:center;">
					<h1 style="color:#f3ef07;font-size:20px;line-height:22px;margin-bottom:10px;font-weight:bold;text-transform:uppercase;">{{eventTitle}}</h1>
					<p><strong>{{eventDescription}}</strong></p>
					<p>
						{%- for detail in eventDetails -%}
						{{detail}}<br />
						{%- endfor -%}
					</p>
				</td>
			</tr>
			<tr>
				<td class="dm-box" style="color:#3c3532;font-family: Arial,'Helvetica Neue',sans-serif;font-size:16px;line-height:22px;padding:0px 25px 15px 25px;background-color:#f2f2f2;text-align:center;">
					<table role="presentation" width="100%" border="0" cellspacing="0" cellpadding="0">
						<tr>
							<td align="center" style="margin: 20px 0 20px 0;">
								<table role="presentation" border="0" cellspacing="0" cellpadding="0">
									<tr>
										<td align="center" bgcolor="f3ef07">
											<a class="button-text" href="{affiliate_website}" style="font-family: Arial, sans-serif; color: #ffffff; padding: 12px 18px; border: 1px solid #f3ef07; display: inline-block;font-size:18px;font-weight:bold;text-align:center;text-decoration:none;text-transform: uppercase;">{{buttonText}}</a>
										</td>
									</tr>
								</table>
							</td>
						</tr>
					</table>
					{%- if disclaimer %}
						<p style="font-size:14px;margin-top:15px;"><em>Please note: This link will take you to a third-party website, {{disclaimer}}.</em></p>
					{% endif -%}
				</td>
			</tr>
		</tbody>
	</table>
</div>
<br />
